.tv-channel
    width 250px
    padding 10px

    &__header
        display flex
        align-items center
        margin-bottom 20px

    &__title
        font-size 18px

    &__icon
        size(38px, 30px)

        img
            size(38px, 30px)

    &__link
        align-items  flex-end
        margin-left auto

        a
            border 0
            line-height 0 !important
            background #fff

            &:hover
                background #fff


.icon_watch
    width 17px !important
    height 17px
    background url('data:image/svg+xml;base64,') !important

